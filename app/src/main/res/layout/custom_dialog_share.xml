<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bgrd_custom_layout5" />



        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="24dp">

                 />

            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                style="@style/buttonGame"
                android:layout_marginTop="15dp"
                android:text="Bagikan"
                android:textSize="19sp"
                android:layout_below="@+id/txt_dialogTag"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_weight="0.3"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/share"
                android:drawableStart="@drawable/share"
                android:id="@+id/btnDialogShare"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/buttonGame"
                android:layout_marginTop="15dp"
                android:text="Lain kali"
                android:textSize="19sp"
                android:layout_below="@+id/btnDialogShare"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_weight="0.3"
                android:layout_marginRight="15dp"
                android:id="@+id/btnDialogNo"/>

            <TextView
                android:id="@+id/txt_dialogTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="Ayo Uji Pengetahuan lagu Anime dengan teman mu !"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>